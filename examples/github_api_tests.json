{
  "test_suite": {
    "name": "GitHub API Tests",
    "tests": [
      {
        "name": "Get GitHub user info",
        "type": "http",
        "method": "GET",
        "url": "https://api.github.com/users/github",
        "expect": {
          "status": 200,
          "contains": "github"
        }
      },
      {
        "name": "Get repository info",
        "type": "http",
        "method": "GET",
        "url": "https://api.github.com/repos/github/docs",
        "expect": {
          "status": 200,
          "contains": "full_name"
        }
      },
      {
        "name": "Search repositories",
        "type": "http",
        "method": "GET",
        "url": "https://api.github.com/search/repositories?q=language:cpp",
        "expect": {
          "status": 200,
          "contains": "items"
        }
      }
    ]
  }
}
